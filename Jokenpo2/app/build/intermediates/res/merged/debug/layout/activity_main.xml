<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#fff3ea">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btn_pedra"
            style="@style/Theme.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="PEDRA"
            android:textStyle="bold" />

        <Button
            style="@style/Theme.AppCompat"
            android:text="PAPEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_papel"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1"
            android:background="#26a7c7"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tesoura"
            style="@style/Theme.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="TESOURA"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/img_jogador"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:paddingTop="90dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription" />

        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="VS"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/img_computador"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:paddingTop="90dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jogador"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            tools:text="0"
            android:layout_weight="1"
            tools:ignore="HardcodedText" />

        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:text="PLACAR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1" />

        <TextView
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_computador"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Jogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1"
            android:id="@+id/nome_jogador" />

        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1" />

        <TextView
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Computador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_weight="1"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:fontFamily="casual"
            android:id="@+id/et_nome"
            android:inputType="text"
            android:textAlignment="center"
            android:hint="Seu nome"
            android:textColorHint="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_weight="1" />

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jokenpo_ok"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>