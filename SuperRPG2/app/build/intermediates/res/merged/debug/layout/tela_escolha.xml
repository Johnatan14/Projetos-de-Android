<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_personagem_escolha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/j1" />

    <Button
        android:id="@+id/btn_velocidade"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#ff1e1e"
        android:text="VELOCIDADE"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_forca"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="#ff1e1e"
        android:text="FORÇA"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_inteligencia"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="#ff1e1e"
        android:text="INTELIGÊNCIA"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</LinearLayout>
